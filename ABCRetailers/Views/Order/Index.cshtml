@model IEnumerable<ABCRetailers.Models.Order>
@using System.Globalization

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.OrderId)</th>
            <th>@Html.DisplayNameFor(m => m.Username)</th>
            <th>@Html.DisplayNameFor(m => m.ProductName)</th>
            <th>@Html.DisplayNameFor(m => m.OrderDate)</th>
            <th>@Html.DisplayNameFor(m => m.Quantity)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.TotalPrice)</th>
            <th>@Html.DisplayNameFor(m => m.Status)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.Username</td>
                <td>@item.ProductName</td>
                <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C", new CultureInfo("en-ZA"))</td>
                <td>@item.TotalPrice.ToString("C", new CultureInfo("en-ZA"))</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
