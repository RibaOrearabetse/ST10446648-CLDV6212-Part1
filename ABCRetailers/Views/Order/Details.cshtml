@using System.Globalization
@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Username (@Model.CustomerId)</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.ProductName (@Model.ProductId)</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C", new CultureInfo("en-ZA"))</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.TotalPrice.ToString("C", new CultureInfo("en-ZA"))</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
