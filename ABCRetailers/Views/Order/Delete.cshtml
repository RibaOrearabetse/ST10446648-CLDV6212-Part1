@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h4>Are you sure you want to delete this order?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Order ID</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>

    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.CustomerId</dd>

    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.ProductId</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.TotalPrice</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" name="id" value="@Model.RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
