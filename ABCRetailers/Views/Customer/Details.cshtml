@model ABCRetailers.Models.CustomerDetails
@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<dl class="row">
    <dt class="col-sm-3">Customer ID</dt>
    <dd class="col-sm-9">@Model.CustomerId</dd>

    <dt class="col-sm-3">First Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Last Name</dt>
    <dd class="col-sm-9">@Model.Surname</dd>

    <dt class="col-sm-3">Username</dt>
    <dd class="col-sm-9">@Model.Username</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Shipping Address</dt>
    <dd class="col-sm-9">@Model.ShippingAddress</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
