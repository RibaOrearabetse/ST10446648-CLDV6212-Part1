@model IEnumerable<ABCRetailers.Models.CustomerDetails>
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Shipping Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.ShippingAddress</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-sm btn-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
